{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Can scanner",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/Source/CanScanner.cpp",
				"${workspaceFolder}/Source/Transcievers/ELM327.cpp", 
				"${workspaceFolder}/Source/Transcievers/SerialWindows.cpp",  
				"-I", "${workspaceFolder}/Source/Transcievers",
				"-I", "${workspaceFolder}/Source",
				"-o",
				"${workspaceFolder}/build/CanScanner.out"
			],
			"options": {
				"cwd": "${workspaceFolder}/Source"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			
			"detail": "compiler: /opt/homebrew/bin/g++-14"
		}
	]
}