{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++-14 build active file",
			"command": "/opt/homebrew/bin/g++-14",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/Source/CanScanner.cpp",
				"-o",
				"${workspaceFolder}/build/CanScanner.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /opt/homebrew/bin/g++-14"
		}
	]
}